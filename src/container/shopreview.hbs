<main>
    {{> shopheader}}
    <hr class="my-5">
    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <span class="display-5">{{header}}</span>
            <div>
                {{#with rating}}
                <p class="mt-3">{{title}}: {{value}}</p>
                {{/with}}
            </div>
            <div>
                {{#with actionBlock}}
                <div class="nav nav-tabs mt-4">
                    {{#each tabs}}
                    <div class="nav-item col-4">
                        {{#if isActive}}
                        <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                        {{else}}
                        <a class="nav-link" aria-current="page" href="#">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
                <hr class="my-5">
                <div class="card my-2">
                    {{#with report}}
                    <div class="card-body">
                        <p class="card-title">{{title}}</p>
                        {{#with button}}
                        <a href="{{link}}"><button class="btn btn-secondary">{{text}}</button></a>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            <hr class="my-5">
            <div>
                {{#with feedbackBlock}}
                <span class="display-6">{{title}}</span>
                <div class="my-4">
                    {{#each buttons}}
                    {{#if isWarning}}
                    <a href="{{link}}"><button class="btn btn-warning mx-4">{{text}}</button></a>
                    {{/if}}
                    {{#if isSuccess}}
                    <a href="{{link}}"><button class="btn btn-success mx-4">{{text}}</button></a>
                    {{/if}}
                    {{#if isDanger}}
                    <a href="{{link}}"><button class="btn btn-danger mx-4">{{text}}</button></a>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card mb-4">
                <div class="card-body">
                    <img class="card-image" src="{{photo}}" alt="{{name}}">
                    <p class="card-title mt-3 fw-medium">{{name}}</p>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <span class="card-title fw-medium">{{price}}</span>
                    {{#if inMarket}}
                    <p class="card-text">Є в наявності</p>
                    {{/if}}
                    {{#each buttons}}
                    <div class="mb-3">
                        {{#if isPrimary}}
                        <a href="{{link}}"><button class="btn btn-primary">{{text}}</button></a>
                        {{/if}}
                    </div>
                    <div>
                        {{#if isSecondary}}
                        <a href="{{link}}"><button class="btn btn-secondary">{{text}}</button></a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="card">
                {{#with seller}}
                <div class="card-body">
                    <span class="card-title">{{title}}:</span>
                    <b class="card-text">{{value}}</b>
                </div>
                {{/with}}
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <hr class="my-4">

    {{> reviewItem}}

    <div class="my-5">
        {{> service}}
    </div>
    <hr class="my-2">
    <div>
        {{> shopfooter}}
    </div>
</main>