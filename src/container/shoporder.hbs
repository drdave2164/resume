<main>
    {{> shopheader}}
    <hr class="mb-2">
    <div class="my-5">
        <span class="display-4">{{header}}</span>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-8">
                    {{#with contacts_data}}
                    <div>
                        <p class="display-6">{{title}}</p>
                    </div>
                    <div class="my-4">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button type="button" class="btn btn-warning">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button type="button" class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="row">
                        {{#with form}}
                        {{#with input}}
                        <div class="col-6 mb-3">
                            {{#with surname}}
                            <label class="form-label">{{label}}</label>
                            <input type="text" class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 mb-3">
                            {{#with name}}
                            <label class="form-label">{{label}}</label>
                            <input type="text" class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 mb-3">
                            {{#with phone}}
                            <label class="form-label">{{label}}</label>
                            <input type="text" class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 mb-3">
                            {{#with email}}
                            <label class="form-label">{{label}}</label>
                            <input type="text" class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                        {{/with}}
                        <hr class="my-3">
                        <div> {{#each switch}}
                            <div class="form-check form-switch">
                                {{#if isActive}}
                                <input class="form-check-input" type="checkbox" checked>
                                <label class="form-check-label" for="flexSwitchCheckChecked">{{text}}</label>
                                {{else}}
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label" for="flexSwitchCheckDefault">{{text}}</label>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                        <hr class="my-3">
                    </div>
                    {{/with}}

                    <div class="row">
                        {{#with delivery}}
                        <div>
                            <p class="display-6">{{title}}</p>
                        </div>
                        <div class="card ">
                            <div class="card-body">
                                <div class="row">
                                    {{#each select}}
                                    <div class="col-6">
                                        <label class="form-label">{{label}}</label>
                                        <select class="form-select">
                                            <option selected>{{placeholder}}</option>
                                            {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="my-3">
                            {{#each delivery_type}}
                            <div class="form-check">
                                <label class="form-check-label">{{type}}</label>
                                <input name="type" type="radio" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        <hr class="my-3">
                        <div>
                            {{#with payment}}
                            <p class="display-6">{{title}}</p>
                            {{#each list}}
                            <div class="form-check">
                                <label class="form-check-label">{{type}}</label>
                                <input name="type" type="radio" class="form-check-input">
                                <div class="form-text">{{description}}</div>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        <hr class="my-3">
                        <div class="row">
                            {{#with contact}}
                            <p class="display-6">{{title}}</p>
                            <div class="col-6 mb-3">
                                {{#with surname}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6 mb-3">
                                {{#with name}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6 mb-3">
                                {{#with phone}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6 mb-3">
                                {{#with email}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        <hr class="my-3">
                        <div class="my-2">
                            {{#with coment}}
                            <label class="form-label">{{label}}</label>
                            <input type="text" class="form-control" placeholder="{{placeholder}}">
                            {{/with}}
                        </div>
                        {{/with}}
                        <hr class="my-3">
                    </div>
                    <div class=" row my-3">
                        {{#with coupon}}
                        <p class="display-6">{{title}}</p>
                        <div>
                            {{#with select}}
                            <div class="mb-3">
                                {{#with availabel_coupon}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select form-select-lg">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                                {{/with}}
                            </div>
                            <div class="mb-3">
                                {{#with friend_coupon}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select form-select-sm">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        <div>
                            {{#with add}}
                            <div class="mb-3">
                                {{#with friend}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control form-control-lg" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="mb-3">
                                {{#with colleague}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control form-control-sm" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                        <hr class="my-3">
                    </div>
                    <div class="row my-3">
                        {{#with quiz}}
                        <p class="display-6">{{title}}</p>
                        <div class="mb-3">
                            {{#with preference}}
                            <span>{{title}}</span>
                            {{#each options}}
                            <div class="form-check">
                                <label class="form-check-label">{{this}}</label>
                                {{#if @first}}
                                <input name="type" type="radio" class="form-check-input" checked>
                                {{else}}
                                <input name="type" type="radio" class="form-check-input">
                                {{/if}}
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        <div class="mb-3">
                            {{#with your_expirience}}
                            <label class="form-label">{{label}}</label>
                            <input type="text" class="form-control">
                            {{/with}}
                        </div>
                        <div class="mb-3">
                            {{#with purchase_frequency}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select form-select-sm">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        <div class="mb-3">
                            {{#with factors}}
                            <span>{{title}}</span>
                            {{#each options}}
                            <div class="form-check">
                                <label class="form-check-label">{{this}}</label>
                                {{#if @first}}
                                <input class="form-check-input" type="checkbox" checked>
                                {{else}}
                                <input class="form-check-input" type="checkbox">
                                {{/if}}
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                <div class="col-4">
                    <div class="card mt-4">
                        {{#each action_block}}
                        <div class="card-block ms-3 my-2">
                            {{#if isSuccess}}
                            <a href="#" class="btn btn-success">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                            <a href="#" class="btn btn-danger">{{text}}</a>
                            {{/if}}
                            {{#if isInfo}}
                            <a href="#" class="btn btn-info">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                    <div class="card mt-3">
                        {{#with total}}
                        <div class="card-body">
                            <p class="card-title display-6">{{title}}</p>
                            {{#each item_list}}
                            <div class="mb-1">{{name}}: {{price}}</div>
                            {{/each}}
                            <hr class="my-2">
                            {{#each additional_info}}
                            <div class="mb-1">{{text}}: {{value}}</div>
                            {{/each}}
                            <hr class="my-2">
                            {{#with total_price}}
                            <div class="mb-1">{{text}}: {{value}}</div>
                            {{/with}}
                            <hr class="my-2">
                            {{#each button}}
                            <div class="my-3">
                                {{#if isPrimary}}
                                <a href="#" class="btn btn-primary">{{text}}</a>
                                {{/if}}
                                {{#if isOutline}}
                                <a href="#" class="btn btn-outline-primary">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="mt-5">
    {{> shopfooter}}
</main>