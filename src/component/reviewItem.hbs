<div>
    {{#each reviewList}}
    <div class="card mb-3">
        <div class="card-body">
            <div class="card mb-3">
                <div class="card-header">
                    {{#with title}}
                    <span class="fw-bold fs-4">{{userName}}</span>
                    <p>{{caption}}</p>
                    <date>{{date}}</date>
                    {{/with}}
                </div>
                {{#with reviewBody}}
                <div class="card-body">
                    <div class="mb-3">
                        {{#with seller}}
                        <span class="card-title">{{title}}</span>
                        <p class="fw-semibold">{{value}}</p>
                        {{/with}}
                    </div>
                    <div class="mb-3">
                        {{#with rating}}
                        <span class=>{{title}}</span>
                        <p class="fw-semibold">{{value}}</p>
                        {{/with}}
                    </div>
                    <div class="mb-3">
                        {{#each text}}
                        <p class="card-text">{{this}}</p>
                        {{/each}}
                    </div>
                    <div class="mb-3">
                        {{#with advantages}}
                        <span class="fw-bold">{{title}}</span>
                        <p class="card-text">{{text}}</p>
                        {{/with}}
                    </div>
                    <div class="mb-3">
                        {{#with disadvantages}}
                        <span class="fw-bold">{{title}}</span>
                        <p class="card-text">{{text}}</p>
                        {{/with}}
                    </div>
                    <div>
                        {{#each images}}
                        <img src="{{this}}" alt="{{image}}">
                        {{/each}}
                    </div>
                </div>
                <div>
                    {{#each coments}}
                    <div class="card mb-3 ms-5 me-2">
                        <div class="card-body">
                            <p class="card-title fw-semibold">{{userName}}</p>
                            <date>{{date}}</date>
                            <p class="card-text">{{text}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
    </div>
    {{/each}}
</div>