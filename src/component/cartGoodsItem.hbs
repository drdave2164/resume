<div class="card mb-2">
    <div class="row">
        <div class="col-md-2">
            <img class="card-img m-2 align-self-center" src="{{image}}" alt="{{name}}">
        </div>
        <div class="col-md-4 align-self-center">
            <h4 class="card-title">{{name}}</h4>
            <p>{{description}}</p>
        </div>
        <div class="col-md-2 align-self-center">
            {{#with price}}
            <span>{{title}}: {{value}}</span>
            {{/with}}
        </div>
        <div class="col-md-2 align-self-center">
            <em>{{amount}}</em>
        </div>
        <div class="col-md-2 align-self-center">
            {{#each buttons}}
            {{#if isPrimary}}
            <a href="{{href}}"><button class="btn btn-primary my-3">{{text}}</button></a>
            {{/if}}
            {{#if isDanger}}
            <a href="{{href}}"><button class="btn btn-outline-danger my-3">{{text}}</button></a>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>